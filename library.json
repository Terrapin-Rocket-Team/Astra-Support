{
  "name": "AstraSupportNativeMocks",
  "version": "0.1.1",
  "description": "Native mocks/shims used by Astra-based libraries for PlatformIO native testing.",
  "keywords": "Astra, native, mocks, PlatformIO",
  "repository": {
    "type": "git",
    "url": "https://github.com/Terrapin-Rocket-Team/Astra-Support.git"
  },
  "license": "MIT",
  "frameworks": "*",
  "platforms": "native",
  "build": {
    "includeDir": ".",
    "srcDir": ".",
    "srcFilter": [
      "-<*>",
      "+<Arduino.cpp>",
      "+<ArduinoMain.cpp>",
      "+<MockStorage.cpp>",
      "+<SITLSocket.cpp>",
      "+<SPI.cpp>",
      "+<Wire.cpp>"
    ]
  },
  "export": {
    "exclude": [
      ".github",
      "docs",
      "flight-data",
      "src/astra_support",
      "pyproject.toml"
    ]
  }
}
